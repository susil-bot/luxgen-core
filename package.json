{
  "name": "trainer-platform-backend",
  "version": "1.0.0",
  "description": "Backend API for Multi-Tenancy Trainer Platform",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "build": "echo 'No build step required for Node.js'",
    "seed": "node src/scripts/seedData.js",
    "dev:seed": "node src/scripts/devSeedData.js",
    "dev:setup": "npm run dev:seed && npm run dev",
    "db:reset": "node src/scripts/devSeedData.js",
    "db:status": "node -e \"const { Pool } = require('pg'); const pool = new Pool(); pool.query('SELECT version()').then(r => { console.log('PostgreSQL:', r.rows[0].version); pool.end(); }).catch(e => console.error('Database error:', e.message));\"",
    "test:flow": "node test-flow.js",
    "test:setup": "node setup-and-test.js",
    "test:all": "npm run test:setup && npm run test:flow"
  },
  "keywords": [
    "trainer",
    "platform",
    "multi-tenancy",
    "api",
    "nodejs",
    "express"
  ],
  "author": "Trainer Platform Team",
  "license": "MIT",
  "dependencies": {
    "aws-sdk": "^2.1490.0",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cron": "^3.1.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "express-winston": "^4.2.0",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.3.0",
    "mongoose": "^8.16.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.10.1",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "sharp": "^0.32.6",
    "socket.io": "^4.7.4",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
