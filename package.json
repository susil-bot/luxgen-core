{
  "name": "luxgen-core",
  "version": "1.0.0",
  "description": "LuxGen Trainer Platform Backend API",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "start:health": "node src/scripts/startWithHealthCheck.js",
    "health": "node src/scripts/simpleHealthCheck.js",
    "health:full": "node src/scripts/healthCheck.js",
    "dev": "nodemon src/index.js",
    "dev:health": "nodemon src/scripts/startWithHealthCheck.js",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch --detectOpenHandles --forceExit",
    "test:coverage": "jest --coverage --detectOpenHandles --forceExit",
    "test:api": "jest src/tests/api --detectOpenHandles --forceExit",
    "test:integration": "jest src/tests/integration --detectOpenHandles --forceExit",
    "test:unit": "jest src/tests/api --detectOpenHandles --forceExit",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:workflows": "node src/scripts/testBusinessWorkflows.js",
    "dev": "node src/index-dev.js",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "lint:staged": "lint-staged",
    "lint:package": "npm audit && npm outdated",
    "pre-commit": "node scripts/pre-commit.js",
    "pre-commit:install": "husky install && husky add .husky/pre-commit 'npm run pre-commit'",
    "pre-commit:uninstall": "husky uninstall",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "security": "npm audit --audit-level moderate",
    "deps:check": "npm outdated",
    "deps:update": "npm update",
    "deps:audit": "npm audit fix",
    "clean": "rm -rf coverage/ node_modules/.cache/",
    "clean:all": "rm -rf coverage/ node_modules/ package-lock.json",
    "build": "npm run lint && npm test",
    "preview": "railway up",
    "deploy": "railway up --detach",
    "db:status": "node src/scripts/manageLuxgenDB.js status",
    "db:migrate": "node src/scripts/manageLuxgenDB.js migrate",
    "db:seed": "node src/scripts/manageLuxgenDB.js seed",
    "db:clear": "node src/scripts/manageLuxgenDB.js clear",
    "db:indexes": "node src/scripts/manageLuxgenDB.js indexes",
    "db:backup": "node src/scripts/manageLuxgenDB.js backup",
    "db:setup": "node src/scripts/manageLuxgenDB.js setup",
    "remove:icons": "node src/scripts/remove-icons-globally.js",
    "ci": "npm run lint && npm run test:all && npm run security",
    "ci:full": "npm run clean && npm install && npm run ci",
    "prepare": "husky"
  },
  "keywords": [
    "luxgen",
    "trainer",
    "platform",
    "api",
    "mongodb",
    "express",
    "jwt",
    "multi-tenant"
  ],
  "author": "LuxGen Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "groq-sdk": "^0.33.0",
    "helmet": "^7.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "mongodb": "^6.3.0",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "openai": "^6.0.1",
    "redis": "^4.6.10",
    "sharp": "^0.32.6",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.3",
    "mongodb-memory-server": "^9.5.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.6.2",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/src/tests/setup.js"
    ],
    "testMatch": [
      "**/src/tests/**/*.spec.js",
      "**/src/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/tests/**",
      "!src/scripts/**",
      "!src/index.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "verbose": true,
    "detectOpenHandles": true,
    "forceExit": true
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "src/tests/**/*.{js,ts}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{js,ts,json}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "package.json": [
      "npm run lint:package",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test:all",
      "pre-push": "npm run ci"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
