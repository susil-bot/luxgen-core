{
  "name": "luxgen-core",
  "version": "1.0.0",
  "description": "LuxGen Core Backend with Hapi.js Architecture and Multi-Tenancy",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "start:prod": "NODE_ENV=production node src/index.js",
    "start:hapi": "ts-node src/hapi/index.ts",
    "start:hapi:prod": "NODE_ENV=production ts-node src/hapi/index.ts",
    "dev": "nodemon src/index.js",
    "dev:hapi": "nodemon --exec ts-node src/hapi/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:validation": "jest tests/validation/",
    "test:integration": "jest tests/integration/",
    "test:performance": "jest tests/performance/",
    "test:all": "jest tests/",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "spec:validate": "npm run test:all && echo 'All specifications validated successfully!'",
    "build": "echo 'Backend build complete'",
    "postinstall": "echo 'Backend dependencies installed'"
  },
  "dependencies": {
    "@hapi/hapi": "^21.3.0",
    "@hapi/joi": "^17.1.1",
    "@hapi/inert": "^7.1.0",
    "@hapi/vision": "^6.0.1",
    "@hapi/good": "^9.0.0",
    "@hapi/good-console": "^8.0.0",
    "@hapi/good-squeeze": "^5.0.0",
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.7",
    "multer": "^1.4.5-lts.1",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "supertest": "^6.3.3",
    "chai": "^4.3.10"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/supertest": "^6.0.2",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.0",
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "babel-jest": "^29.7.0",
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "hapi",
    "express",
    "mongodb",
    "multi-tenant",
    "api",
    "backend",
    "typescript",
    "validation",
    "testing"
  ],
  "author": "LuxGen Team",
  "license": "MIT"
}
