{
  "name": "luxgen-trainer-platform-backend",
  "version": "1.0.0",
  "description": "A comprehensive training platform backend with AI integration, multi-tenancy, and advanced features",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=src/tests/unit",
    "test:integration": "jest --testPathPattern=src/tests/integration",
    "test:e2e": "jest --testPathPattern=src/tests/e2e",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write src/**/*.js",
    "format:check": "prettier --check src/**/*.js",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "db:migrate": "node src/scripts/setupDatabase.js",
    "db:seed": "node src/scripts/seedData.js",
    "db:reset": "npm run db:migrate && npm run db:seed",
    "health:check": "curl -f http://localhost:3001/health || exit 1",
    "performance:test": "artillery run tests/performance/load-test.yml",
    "docker:build": "docker build -t luxgen-trainer-platform .",
    "docker:run": "docker run -p 3001:3001 luxgen-trainer-platform",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "deploy:staging": "npm run test && npm run lint && npm run security:audit",
    "deploy:production": "npm run test:coverage && npm run lint && npm run security:audit && npm run performance:test"
  },
  "keywords": [
    "training",
    "platform",
    "ai",
    "multi-tenant",
    "nodejs",
    "express",
    "mongodb",
    "jwt",
    "api"
  ],
  "author": "LuxGen Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "express-validator": "^7.0.1",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.10.0",
    "redis": "^4.6.8",
    "groq-sdk": "^0.3.0",
    "openai": "^4.11.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.0",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "joi": "^17.9.2",
    "crypto": "^1.0.1",
    "fs-extra": "^11.1.1",
    "path": "^0.12.7",
    "url": "^0.11.3",
    "querystring": "^0.2.1",
    "http": "^0.0.1-security",
    "https": "^1.0.0",
    "stream": "^0.0.2",
    "buffer": "^6.0.3",
    "util": "^0.12.5",
    "events": "^3.3.0",
    "assert": "^2.0.0",
    "os": "^0.1.2",
    "child_process": "^1.0.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "mongodb-memory-server": "^8.12.2",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.2",
    "artillery": "^2.0.0-27",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.0",
    "@types/express": "^4.17.17",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "^1.4.7",
    "@types/nodemailer": "^6.4.9",
    "@types/uuid": "^9.0.2",
    "@types/lodash": "^4.14.195",
    "@types/compression": "^1.7.2",
    "@types/morgan": "^1.9.4",
    "@types/cors": "^2.8.13",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/src/tests/setup.js"],
    "testMatch": [
      "<rootDir>/src/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/tests/**",
      "!src/scripts/**",
      "!src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testTimeout": 30000
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/luxgen/trainer-platform-backend.git"
  },
  "bugs": {
    "url": "https://github.com/luxgen/trainer-platform-backend/issues"
  },
  "homepage": "https://github.com/luxgen/trainer-platform-backend#readme"
}
