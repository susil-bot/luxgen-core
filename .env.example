# =============================================================================
# TRAINER PLATFORM - ENVIRONMENT VARIABLES EXAMPLE
# =============================================================================
# Copy this file to .env and update with your actual values
# cp env.development .env

# Application Settings
NODE_ENV=development
PORT=3001
APP_NAME=Trainer Platform
APP_VERSION=1.0.0

# Database Configuration
# PostgreSQL - Primary Database (Local)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=trainer_platform
POSTGRES_USER=trainer_user
POSTGRES_PASSWORD=your_postgres_password_here

# Redis Configuration (Local)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# MongoDB Configuration (Atlas Cloud)
MONGODB_URL=mongodb+srv://username:password@your-cluster.mongodb.net/?retryWrites=true&w=majority

# Authentication & Security
JWT_SECRET=your_jwt_secret_key_here_change_in_production_min_32_chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Session Management
SESSION_SECRET=your_session_secret_here_change_in_production_min_32_chars
SESSION_STORE=redis
SESSION_TTL=86400

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# File Upload & Storage
UPLOAD_MAX_SIZE=50MB
STORAGE_PROVIDER=local
STORAGE_PATH=./uploads

# Email Configuration
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@trainerplatform.com

# AI Assistant Configuration
AI_PROVIDER=openai
OPENAI_API_KEY=your-openai-api-key

# Monitoring & Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Feature Flags
ENABLE_AI_ASSISTANT=true
ENABLE_REAL_TIME_COLLABORATION=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_MULTI_TENANCY=true
ENABLE_SSO=false

# Development & Testing
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=false

# Performance & Caching
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
ENABLE_COMPRESSION=true

# Security Headers
ENABLE_CSP=true
ENABLE_HSTS=true
ENABLE_XSS_PROTECTION=true
ENABLE_CONTENT_TYPE_NOSNIFF=true

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# Redis Connection Pool
REDIS_POOL_MIN=2
REDIS_POOL_MAX=10
REDIS_POOL_ACQUIRE=30000
REDIS_POOL_IDLE=10000 