# =============================================================================
# üöÄ LUXGEN TRAINER PLATFORM - ENVIRONMENT VARIABLES
# =============================================================================
# This is the FINAL and ONLY .env file you need
# Copy this file to .env and update with your actual values for your environment

# =============================================================================
# üì± APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
PORT=3001
APP_NAME=LuxGen Trainer Platform
APP_VERSION=1.0.0

# =============================================================================
# üóÑÔ∏è DATABASE CONFIGURATION
# =============================================================================
# MongoDB (Primary Database)
MONGODB_URL=mongodb://127.0.0.1:27017/luxgen_trainer_platform

# Redis (Caching & Sessions)
REDIS_URL=redis://127.0.0.1:6379
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# üîê AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=your_jwt_secret_key_here_change_in_production_min_32_chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Session Management
SESSION_SECRET=your_session_secret_here_change_in_production_min_32_chars
SESSION_STORE=redis
SESSION_TTL=86400

# =============================================================================
# üåê CORS & NETWORKING
# =============================================================================
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000,http://127.0.0.1:3001
CORS_CREDENTIALS=true

# =============================================================================
# üìß EMAIL CONFIGURATION
# =============================================================================
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@trainerplatform.com

# =============================================================================
# ü§ñ AI SERVICES CONFIGURATION
# =============================================================================
AI_PROVIDER=groq
GROQ_API_KEY=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
OPENAI_API_KEY=your-openai-api-key

# AI Model Settings
AI_MODEL=llama-3.3-70b-versatile
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.7
AI_TOP_P=0.9
AI_FREQUENCY_PENALTY=0.0
AI_PRESENCE_PENALTY=0.0

# =============================================================================
# üìÅ FILE UPLOAD & STORAGE
# =============================================================================
UPLOAD_MAX_SIZE=50MB
STORAGE_PROVIDER=local
STORAGE_PATH=./uploads
MAX_FILE_SIZE=10485760

# =============================================================================
# üìä MONITORING & LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/app.log

# =============================================================================
# üö¶ RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false
RATE_LIMIT_WINDOW_MS=900000

# =============================================================================
# üéõÔ∏è FEATURE FLAGS
# =============================================================================
ENABLE_AI_ASSISTANT=true
ENABLE_REAL_TIME_COLLABORATION=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_MULTI_TENANCY=true
ENABLE_SSO=false
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=false

# =============================================================================
# ‚ö° PERFORMANCE & CACHING
# =============================================================================
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
ENABLE_COMPRESSION=true

# =============================================================================
# üõ°Ô∏è SECURITY HEADERS
# =============================================================================
ENABLE_CSP=true
ENABLE_HSTS=true
ENABLE_XSS_PROTECTION=true
ENABLE_CONTENT_TYPE_NOSNIFF=true

# =============================================================================
# üîå CONNECTION POOLS
# =============================================================================
# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# Redis Connection Pool
REDIS_POOL_MIN=2
REDIS_POOL_MAX=10
REDIS_POOL_ACQUIRE=30000
REDIS_POOL_IDLE=10000

# =============================================================================
# üè¢ TENANT-SPECIFIC CONFIGURATIONS
# =============================================================================
# Demo Tenant
DEMO_SMTP_HOST=smtp.gmail.com
DEMO_SMTP_PORT=587
DEMO_STRIPE_PUBLISHABLE_KEY=your-demo-stripe-publishable-key
DEMO_STRIPE_SECRET_KEY=your-demo-stripe-secret-key

# ACME Corporation Tenant
ACME_SENDGRID_KEY=your-acme-sendgrid-key
ACME_AWS_ACCESS_KEY=your-acme-aws-access-key
ACME_AWS_SECRET_KEY=your-acme-aws-secret-key
ACME_STRIPE_PUBLISHABLE_KEY=your-acme-stripe-publishable-key
ACME_STRIPE_SECRET_KEY=your-acme-stripe-secret-key
ACME_STRIPE_WEBHOOK_SECRET=your-acme-stripe-webhook-secret
ACME_SAML_ENTRY_POINT=your-acme-saml-entry-point
ACME_SAML_CERT=your-acme-saml-cert

# =============================================================================
# üåç FRONTEND INTEGRATION
# =============================================================================
FRONTEND_URL=http://localhost:3000

# =============================================================================
# üìù NOTES
# =============================================================================
# 1. For production, change NODE_ENV=production
# 2. Update all secrets with strong, unique values
# 3. Use environment-specific databases (MongoDB Atlas for production)
# 4. Configure proper email service for production
# 5. Set up SSL/TLS certificates for production
# 6. Update CORS_ORIGIN with your production frontend URL
# 7. Configure proper logging and monitoring for production
