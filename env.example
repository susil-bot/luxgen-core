# LuxGen Database Configuration
# ================================

# Database Connection Flags
# -------------------------
# Set to 'true' for local development (campus/office)
# Set to 'false' or leave empty for MongoDB Atlas (production)
USE_LOCAL_DB=true

# MongoDB Atlas Connection (Production)
# -------------------------------------
# Only used when USE_LOCAL_DB=false or not set
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/luxgen

# Local MongoDB Configuration (Development)
# ----------------------------------------
# Only used when USE_LOCAL_DB=true
LOCAL_MONGODB_HOST=localhost
LOCAL_MONGODB_PORT=27017
LOCAL_MONGODB_DATABASE=luxgen

# Environment Configuration
# ------------------------
NODE_ENV=development
PORT=3000

# Security
# --------
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key

# Features Flags
# ---------
ENABLE_TENANT_ISOLATION=true
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true